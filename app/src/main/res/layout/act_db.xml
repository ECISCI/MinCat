<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_shallow"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppCompat_toolbar"
        android:elevation="4dp"
        android:minHeight="@dimen/public_high"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:transitionName="actionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/title"
            style="@style/AppCompat_toolbar_text"
            android:text="数据库" />

        <ImageButton
            android:id="@+id/refresh"
            android:layout_width="@dimen/margin_twenty"
            android:layout_height="@dimen/margin_twenty"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginRight="@dimen/margin_ten"
            android:background="@null"
            android:src="@drawable/icon_refresh"
            android:visibility="gone" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_high">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="*** 操作日志请查看android studio"
            android:textColor="@color/md_red_500"
            android:textSize="@dimen/text_size_fourteen" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_person"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_test_button"
                android:text="添加数据到Person表"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/add_book"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_test_button"
                android:text="添加数据到Book表"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/select_person"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_test_button"
                android:text="查询Person表"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/select_book"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_test_button"
                android:text="查询Book表"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/delete_person"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_test_button"
                android:text="删除Person表"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/delete_book"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_test_button"
                android:text="删除Book表"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>