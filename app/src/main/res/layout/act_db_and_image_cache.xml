<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_shallow"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppCompat_toolbar"
        android:elevation="4dp"
        android:minHeight="@dimen/public_high"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:transitionName="actionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/title"
            style="@style/AppCompat_toolbar_text"
            android:text="列表缓存" />

        <Button
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_twenty"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginRight="@dimen/margin_ten"
            android:background="@null"
            android:text="加载"
            android:visibility="gone" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_ten"
        android:gravity="center"
        android:text="@string/cache_describe"
        android:textColor="@color/md_red_600"
        android:textSize="@dimen/text_size_fourteen" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_ten"
        android:gravity="center"
        android:text="@string/sd_card_path"
        android:textColor="@color/md_red_600"
        android:textSize="@dimen/text_size_fourteen" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_ten"
        android:gravity="center"
        android:text="@string/no_sdcard_path"
        android:textColor="@color/md_red_600"
        android:textSize="@dimen/text_size_fourteen" />

    <Button
        android:id="@+id/read_net"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_high"
        android:layout_margin="@dimen/margin_ten"
        android:background="@drawable/corners_bg_white"
        android:text="读网络"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/read_local"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_high"
        android:layout_margin="@dimen/margin_ten"
        android:background="@drawable/corners_bg_white"
        android:text="读本地"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/remove_all_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_high"
        android:layout_margin="@dimen/margin_ten"
        android:background="@drawable/corners_bg_white"
        android:text="删除全部缓存"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</LinearLayout>