<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppCompat_toolbar"
        android:elevation="4dp"
        android:minHeight="@dimen/public_high"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:transitionName="actionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/title"
            style="@style/AppCompat_toolbar_text"
            android:text="测试首页" />

        <ImageButton
            android:id="@+id/refresh"
            android:layout_width="@dimen/margin_twenty"
            android:layout_height="@dimen/margin_twenty"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginRight="@dimen/margin_ten"
            android:background="@null"
            android:src="@drawable/icon_refresh"
            android:visibility="gone" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/net"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_test_button"
                android:text="网络请求"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/charts"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_test_button"
                android:text="Charts图测试"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_test_button"
                android:text="视频播放"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/image_cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_test_button"
                android:text="图片缓存"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="visible" />

            <Button
                android:id="@+id/db"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_test_button"
                android:text="数据库"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/db_image_cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_test_button"
                android:text="数据库+图片缓存"
                android:textAllCaps="false"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/test_annotation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_test_button"
                android:text="快速注解"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>