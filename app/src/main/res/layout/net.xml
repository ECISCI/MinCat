<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppCompat_toolbar"
        android:elevation="4dp"
        android:minHeight="@dimen/public_high"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:transitionName="actionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/title"
            style="@style/AppCompat_toolbar_text"
            android:text="网络请求" />

        <ImageButton
            android:id="@+id/refresh"
            android:layout_width="@dimen/margin_twenty"
            android:layout_height="@dimen/margin_twenty"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginRight="@dimen/margin_ten"
            android:background="@null"
            android:src="@drawable/icon_refresh"
            android:visibility="gone" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_send_xutils_post"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_bg_white"
                android:text="Xutils Post 请求"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_send_xutils_get"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_bg_white"
                android:text="Xutils Get 请求"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_send_volley_post"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_bg_white"
                android:text="Volley Post 请求"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_send_volley_get"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_high"
                android:layout_margin="@dimen/margin_ten"
                android:background="@drawable/corners_bg_white"
                android:text="Volley Get 请求"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>